<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="#1f8c8a"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_icon"
            android:layout_marginTop="5dip"
            android:layout_marginLeft="10dip"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_left_arrow"
            android:adjustViewBounds="true"/>
        <ImageView
            android:id="@+id/top_icon"
            android:layout_marginTop="5dip"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:src="@drawable/icon_top"
            android:layout_toRightOf="@+id/back_icon"
            android:layout_toLeftOf="@+id/map_icon"/>
        <ImageView
            android:id="@+id/map_icon"
            android:layout_marginTop="5dip"
            android:layout_marginRight="10dip"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:src="@drawable/icon_map"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"/>


    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="280dip">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/spot_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:background="#AA000000"
                    android:layout_alignParentTop="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#AAffffff"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:background="#AA000000"
                />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="#AAffffff"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30dip"
                    android:background="#AA000000"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@drawable/list_item_spot_footer_grad"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dip"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="31dip"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/spot_type_icon"
                    android:layout_marginTop="3dip"
                    android:layout_marginLeft="10dip"
                    android:layout_width="24dip"
                    android:layout_height="24dip"
                    android:layout_alignParentLeft="true"
                    android:adjustViewBounds="true"/>

                <TextView
                    android:id="@+id/spot_name"
                    android:layout_marginTop="3dip"
                    android:layout_marginLeft="5dip"
                    android:layout_width="match_parent"
                    android:layout_height="24dip"
                    android:layout_toRightOf="@+id/spot_type_icon"
                    android:layout_toLeftOf="@+id/spot_distance"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/spot_distance"
                    android:layout_marginTop="3dip"
                    android:layout_marginRight="10dip"
                    android:layout_width="60dip"
                    android:layout_height="24dip"
                    android:layout_alignParentRight="true"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
            </RelativeLayout>

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="31dip"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/telephone_icon"
                android:layout_marginTop="3dip"
                android:layout_marginLeft="10dip"
                android:layout_width="24dip"
                android:layout_height="24dip"
                android:layout_alignParentLeft="true"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_tel"/>

            <TextView
                android:id="@+id/telephone_number"
                android:layout_marginTop="3dip"
                android:layout_marginLeft="3dip"
                android:layout_width="150dip"
                android:layout_height="24dip"
                android:layout_toRightOf="@+id/telephone_icon"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/chair_number"
                android:layout_marginTop="3dip"
                android:layout_marginRight="10dip"
                android:layout_width="match_parent"
                android:layout_toRightOf="@+id/telephone_number"
                android:layout_height="24dip"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/cafe_time"
                    android:layout_marginTop="3dip"
                    android:layout_marginLeft="10dip"
                    android:layout_width="match_parent"
                    android:layout_height="24dip"
                    android:layout_alignParentLeft="true"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/spot_locate"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginBottom="3dip"
                android:layout_marginLeft="10dip"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/spot_smoke_icon"
                android:textColor="#ffffff"
                android:textSize="18sp"/>
            <ImageView
                android:id="@+id/spot_smoke_icon"
                android:layout_width="60dip"
                android:layout_height="34dip"
                android:layout_marginBottom="3dip"
                android:layout_marginRight="5dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"/>
        </RelativeLayout>

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/map_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            android:id="@+id/spot_detail_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            class="com.google.android.gms.maps.SupportMapFragment"/>
     </RelativeLayout>
</LinearLayout>